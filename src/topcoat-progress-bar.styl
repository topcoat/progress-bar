@import progress-mixin

/*
Progress bar
-------------------

  <div class='topcoat-progress-bar'>
    <span class='progress'></span>
  </div>
*/

.topcoat-progress-bar
  // Style
  background-color #404141
  box-shadow inset 0 1px rgba(0,0,0,.12)
  // Base
  overflow hidden
  width 250px
  height 1.25em
  border-radius 12px
  margin 20px

  .topcoat-progress-bar
    & > .progress
      // Style
      background-color #e0f0fa
      box-shadow inset 0 1px rgba(0, 0, 0, 0.12)
      // Base
      display block
      height 100%
      width 45%
      border-radius 12px 0 0 12px

.complete
  width 100%